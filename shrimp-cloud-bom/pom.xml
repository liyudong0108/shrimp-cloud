<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.wkclz.bom</groupId>
    <artifactId>shrimp-cloud-bom</artifactId>
    <version>4.0.0-SNAPSHOT</version>

    <packaging>pom</packaging>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>

        <feign-okhttp.version>11.0</feign-okhttp.version>

        <!-- shrimp 相关依赖 -->
        <shrimp.common.version>4.0.0-SNAPSHOT</shrimp.common.version>
        <shrimp.redis.version>4.0.0-SNAPSHOT</shrimp.redis.version>
        <shrimp.spring.version>4.0.0-SNAPSHOT</shrimp.spring.version>
        <shrimp.auth.version>4.0.0-SNAPSHOT</shrimp.auth.version>

        <commons-lang3.version>3.12.0</commons-lang3.version>
        <commons-beanutils.version>1.9.4</commons-beanutils.version>
        <spring-beans.version>5.3.21</spring-beans.version>
        <fastjson2.version>2.0.4</fastjson2.version>
        <hutool.version>5.8.2</hutool.version>
        <guava.version>31.1-jre</guava.version>
        <jsoup.version>1.15.1</jsoup.version>
        <zxing.version>3.5.0</zxing.version>
        <jasypt-spring-boot.version>3.0.3</jasypt-spring-boot.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- spring -->
            <dependency>
                <groupId>io.github.openfeign</groupId>
                <artifactId>feign-okhttp</artifactId>
                <version>${feign-okhttp.version}</version>
            </dependency>

            <!-- wkclz -->
            <dependency>
                <groupId>com.wkclz.common</groupId>
                <artifactId>shrimp-cloud-common</artifactId>
                <version>${shrimp.common.version}</version>
            </dependency>
            <dependency>
                <groupId>com.wkclz.redis</groupId>
                <artifactId>shrimp-cloud-redis</artifactId>
                <version>${shrimp.redis.version}</version>
            </dependency>
            <dependency>
                <groupId>com.wkclz.spring</groupId>
                <artifactId>shrimp-cloud-spring</artifactId>
                <version>${shrimp.spring.version}</version>
            </dependency>
            <dependency>
                <groupId>com.wkclz.auth</groupId>
                <artifactId>shrimp-cloud-auth</artifactId>
                <version>${shrimp.auth.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${commons-lang3.version}</version>
            </dependency>
            <dependency>
                <groupId>commons-beanutils</groupId>
                <artifactId>commons-beanutils</artifactId>
                <version>${commons-beanutils.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-beans</artifactId>
                <version>${spring-beans.version}</version>
            </dependency>
            <dependency>
                <groupId>com.alibaba.fastjson2</groupId>
                <artifactId>fastjson2</artifactId>
                <version>${fastjson2.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.hutool</groupId>
                <artifactId>hutool-all</artifactId>
                <version>${hutool.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.zxing</groupId>
                <artifactId>core</artifactId>
                <version>${zxing.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.zxing</groupId>
                <artifactId>javase</artifactId>
                <version>${zxing.version}</version>
            </dependency>
            <dependency>
                <groupId>org.jsoup</groupId>
                <artifactId>jsoup</artifactId>
                <version>${jsoup.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.ulisesbocchio</groupId>
                <artifactId>jasypt-spring-boot</artifactId>
                <version>${jasypt-spring-boot.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>